@model PaymentRecordDetailViewModel

@{ ViewBag.Title = "Payslip"; }

<div class="row">
    <div class=" col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="container-fluid d-flex justify-content-between">
                    <div class="col-md-3">
                        <p class="mt-5 mb-3 pl-0"> <b>Avocado Limited </b> </p>
                        <p> 12, Foreshor <br />Close Yaba<br /> Lagos</p>
                    </div>
                    <div class="col-md-3 pr-0">
                        <p class="mt-5 mb-3 text-right"> <b>Pay Date: @Model.PayDate.ToString("dd/mm/yyyy") </b> </p>
                        <p class="mt-5 mb-3 text-right"> Tax Code: @Model.TaxCode <br />Year: @Model.Year<br /> FIRS </p>
                    </div>
                </div><br /><br />
                <div class="col-md-12 row">
                    <div class="col-md-8"> <h5>Employee's Name: @Model.FullName</h5></div>
                    <div class="col-md-4"> <h5>National Insurance Number: @Model.NiNo</h5></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 table-responsive-md">
                    <table class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Earnings</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Deductions</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><b> Basic : </b></td>
                                <td>@Model.ContractualHours.ToString("f")</td>
                                <td>@Model.HourlyRate.ToString("f")</td>
                                <td>@Model.ContractualEarnings.ToString("C")</td>
                                <td><b>Tax:</b></td>
                                <td>@Model.Tax.ToString("C")</td>

                            </tr>
                            <tr>
                                <td><b> Overtime : </b></td>
                                <td>@Model.OvertimeHours.ToString("f")</td>
                                <td>@Model.OvertimeRate.ToString("f2")</td>
                                <td>@Model.ContractualEarnings.ToString("C")</td>
                                <td><b>NIC :</b></td>
                                <td>@Model.NIC.ToString("C")</td>

                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>Union :</b></td>
                                <td>@Model.UnionFee.Value.ToString("C")</td>

                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>SLC :</b></td>
                                <td>@Model.SLC.Value.ToString("C")</td>

                            </tr>
                            <tr>
                                <td><b>Total : </b></td>
                                <td>@Model.HoursWorked</td>
                                <td></td>
                                <td>@Model.TotalDeduction</td>
                                <td></td>
                                <td>@Model.TotalEarnings.ToString("C")</td>

                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="table-dark"><b>NET PAY:</b></td>
                                <td class="table-dark">@Model.NetPayment.ToString("C")</td>

                            </tr>

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>